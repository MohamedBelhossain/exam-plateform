<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profil de l'Enseignant</title>
  <link rel="stylesheet" href="/css/enseignant-parametres-profile.css">
</head>
<body>
  <section id="profile" class="main-section">
    <div class="section-header">
      <h2>Mon Profil</h2>
      <p>Informations personnelles et professionnelles</p>
    </div>

    <div class="profile-container">
      <div class="profile-header">
        <div class="profile-image">
          <img id="profile-picture" src="/images/default-avatar.png" alt="Photo de profil">
          <label for="upload-profile-picture" class="profile-image-overlay">✎</label>
          <input type="file" id="upload-profile-picture" accept="image/*" hidden>
        </div>
        <div class="profile-info">
          <h3 id="profile-name"><%= user.prenom %> <%= user.nom %></h3>
          <p id="profile-email"><%= user.email %></p>
        </div>
      </div>

      <div class="profile-content">
        <form id="form-infos-personnelles" class="profile-card">
          <h3>Informations Personnelles</h3>
          <div class="form-group"><label>Nom :</label><input type="text" class="form-control" disabled value="<%= user.nom %>"></div>
          <div class="form-group"><label>Prénom :</label><input type="text" class="form-control" disabled value="<%= user.prenom %>"></div>
          <div class="form-group"><label>Email :</label><input type="email" class="form-control" disabled value="<%= user.email %>"></div>
          <div class="form-group"><label>Date de naissance :</label><input type="date" class="form-control" disabled value="<%= user.dateNaissance ? user.dateNaissance.toISOString().split('T')[0] : '' %>"></div>
          <div class="form-group"><label>Sexe :</label><input type="text" class="form-control" disabled value="<%= user.sexe %>"></div>
        </form>

        <form id="form-infos-professionnelles" class="profile-card">
          <h3>Informations Professionnelles</h3>
          <div class="form-group"><label>Établissement :</label><input type="text" class="form-control" disabled value="<%= user.etablissement %>"></div>
          <div class="form-group"><label>Filière :</label><input type="text" class="form-control" disabled value="<%= user.filiere %>"></div>
        </form>
      </div>
    </div>

    <div class="buttons-container">
      <button onclick="exitPage()" class="btn btn-exit">Quitter</button>
    </div>
  </section>

  <script>
    function exitPage() {
      window.location.href = "/enseignant";
    }
  </script>
  <script src="/javascript/enseignant-parametres-profile.js"></script>
</body>
</html>


