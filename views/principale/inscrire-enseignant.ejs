<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Inscription Enseignant</title>
  <link rel="stylesheet" href="/css/inscri.css">
</head>
<body>
  <div class="base">
    <div class="login-container">
      <h2>Inscription Enseignant</h2>
      <form id="inscriptionForm">
        
      <!-- Email -->
      <div class="form-group">
        <label for="email">Adresse email</label>
        <input type="email" id="email" required>
      </div>

      <!-- Nom -->
      <div class="form-group">
        <label for="nom">Nom</label>
        <input type="text" id="nom" required>
      </div>

      <!-- Prénom -->
      <div class="form-group">
        <label for="prenom">Prénom</label>
        <input type="text" id="prenom" required>
      </div>

      <!-- Date de naissance -->
      <div class="form-group">
        <label for="dateNaissance">Date de naissance</label>
        <input type="date" id="dateNaissance" required>
      </div>

      <!-- Sexe -->
      <div class="form-group">
        <label for="sexe"></label>
        <select id="sexe" required>
          <option value="">-- Choisir --</option>
          <option value="homme">Homme</option>
          <option value="femme">Femme</option>
          <option value="autre">ingénieur</option>
        </select>
      </div>

      <!-- Établissement -->
      <div class="form-group">
        <label for="etablissement">Établissement</label>
        <input type="text" id="etablissement" required>
      </div>

        <!-- les mêmes champs... -->
        <input type="hidden" id="role" value="enseignant">
        <!-- les autres champs identiques -->
          <!-- Mot de passe -->
      <div class="form-group">
        <label for="password">Mot de passe</label>
        <input type="password" id="password" required>
      </div>

      <!-- Confirmer le mot de passe -->
      <div class="form-group">
        <label for="confirmPassword">Confirmer le mot de passe</label>
        <input type="password" id="confirmPassword" required>
      </div>
        <button type="submit" class="login-btn">S'inscrire</button>
      </form>
    </div>
  </div>
  <script src="/javascript/inscription-enseignant.js"></script>
</body>
</html>
